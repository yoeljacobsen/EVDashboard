<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/soc_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SoC: --%"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/range_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/range_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Range: -- km"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soc_text_view" />

    <Button
        android:id="@+id/copy_logs_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy Logs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/range_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>